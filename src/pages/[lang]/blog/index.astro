---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { SUPPORTED_LANGS, DEFAULT_LANG, isValidLanguage } from '../../../utils/i18n';
import { loadBlogPosts, isUsingFallback } from '../../../utils/blog';
import '../../../styles/styles.css';

export function getStaticPaths() {
  return SUPPORTED_LANGS.map(lang => ({
    params: { lang }
  }));
}

const { lang } = Astro.params;

if (!isValidLanguage(lang)) {
  return Astro.redirect(`/${DEFAULT_LANG}/blog`);
}

const posts = loadBlogPosts(lang);
const showFallbackNote = isUsingFallback(lang);

// Split posts into Featured and Regular
const featuredPost = posts[0];
const remainingPosts = posts.slice(1);
---

<BaseLayout title="Blog Â· Vokabulo" currentLang={lang} currentPath="/blog">
  <div class="blog-page hero-animate">
    <div class="max-w-7xl mx-auto px-6 md:px-16 lg:px-24 pt-32 pb-20">
      
      <header class="mb-12 text-center space-y-4">
        <div class="inline-flex items-center gap-2 rounded-full border border-slate-200 bg-transparent backdrop-blur px-3 py-1 text-xs font-semibold uppercase tracking-[0.14em] text-slate-700 shadow-sm">
          Blog
        </div>
        <h2 class="text-3xl font-semibold tracking-tight text-slate-900 sm:text-4xl">
          Ideas to level-up your freelance game
        </h2>
        {showFallbackNote && (
          <p class="text-sm text-slate-500 pt-2">Translation coming soon. Showing English version.</p>
        )}
      </header>

      {posts.length === 0 ? (
        <div class="empty-state card p-20 text-center">
          <h2 class="text-2xl font-bold mb-4 text-slate-900">Coming soon</h2>
          <p class="text-slate-600">We're working on our first blog posts. Check back soon!</p>
        </div>
      ) : (
        <div class="space-y-12">
          
          {featuredPost && (
            <a href={`/${lang}/blog/${featuredPost.slug}`} class="card post-card featured-card group">
              <div class="featured-grid">
                <div class="featured-image-wrapper relative">
                  <div class="absolute top-6 left-6 z-10 flex gap-2">
                    <span class="badge-must-read">Must Read</span>
                    {featuredPost.tag && <span class="badge-must-read">{featuredPost.tag}</span>}
                  </div>
                  <img
                    src={featuredPost.image || "/images/blog/default.jpg"}
                    alt={featuredPost.imageAlt || featuredPost.title}
                    class="featured-img"
                  />
                </div>
                <div class="featured-content">
                  <div class="mx-auto max-w-4xl space-y-3 text-left mb-8">
                    <h2 class="text-3xl font-semibold tracking-tight text-slate-900 sm:text-4xl">
                      {featuredPost.title}
                    </h2>
                    <p class="text-lg leading-relaxed text-slate-700 sm:text-xl">
                      {featuredPost.excerpt}
                    </p>
                  </div>
                  
                  <div class="featured-content-footer flex items-center justify-between">
                    <div class="flex items-center gap-3">
                      <div class="w-10 h-10 rounded-full bg-slate-200 overflow-hidden">
                        <img 
                        src={featuredPost.authorImage || "/images/blog/lukas.jpg"}
                        alt={featuredPost.author} 
                        class="object-cover w-full h-full" 
                      />
                      </div>
                      <div>
                        <p class="text-sm font-bold text-slate-900">Vokabulo Team</p>
                        <p class="text-xs text-slate-500">Head of Content</p>
                      </div>
                    </div>
                    <span class="featured-label text-xs font-bold uppercase text-slate-400">Featured</span>
                  </div>
                </div>
              </div>
            </a>
          )}

         
          <div class="posts-grid">
            {remainingPosts.map(post => (
              <a href={`/${lang}/blog/${post.slug}`} class="card post-card group">
                <div class="relative overflow-hidden aspect-[16/10] w-full">
                  <div class="absolute top-3 left-3 z-10">
                    <span class="glass-pill text-[10px] font-bold uppercase tracking-widest px-3 py-1.5 rounded-full">
                      {post.tag || 'Article'}
                    </span>
                  </div>
                  <img
                    class="w-full h-full object-cover transition-transform duration-700 cubic-bezier(0.2, 0.8, 0.2, 1) group-hover:scale-110"
                    src={post.image || "/images/blog/default.jpg"}
                    alt={post.imageAlt || post.title}
                    loading="lazy"
                  />
                </div>
          
                <div class="flex flex-col flex-grow">

                  <h3 class="text-lg font-semibold text-slate-900 leading-snug mb-3">{post.title}</h3>
                  <p class="text-sm text-slate-600 leading-relaxed mb-6">{post.excerpt}</p>
          
                 
              
              

                  
                  <div class="mt-auto pt-4 border-t border-slate-200/50 flex items-center justify-between">
                     <div class="flex items-center gap-2">
                       <div class="w-6 h-6 rounded-full bg-slate-200 overflow-hidden border border-white">
                        <img 
                        src={post.authorImage || "/images/blog/lukas.jpg"}
                        alt={post.author} 
                        class="w-full h-full object-cover" 
                      />
                       </div>
                       <span class="text-[11px] font-bold text-slate-500 uppercase">Vokabulo</span>
                     </div>
                     <span class="text-[11px] text-slate-400 font-medium">5 min read</span>
                  </div>
                </div>
              </a>
            ))}
          </div>
        </div>
      )}
    </div>
  </div>
</BaseLayout>

