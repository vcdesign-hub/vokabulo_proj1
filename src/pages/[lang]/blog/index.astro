---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { SUPPORTED_LANGS, DEFAULT_LANG, isValidLanguage } from '../../../utils/i18n';
import { loadBlogPosts, isUsingFallback } from '../../../utils/blog';

export function getStaticPaths() {
  return SUPPORTED_LANGS.map(lang => ({
    params: { lang }
  }));
}

const { lang } = Astro.params;

// Validate language
if (!isValidLanguage(lang)) {
  return Astro.redirect(`/${DEFAULT_LANG}/blog`);
}

const posts = loadBlogPosts(lang);
const showFallbackNote = isUsingFallback(lang);
---

<BaseLayout title="Blog Â· Vokabulo" currentLang={lang} currentPath="/blog">
  <style is:global>
    /* Blog page styles - matching homepage aesthetic */
    body {
      background: radial-gradient(circle at 10% 20%, #f0f4ff 0, rgba(240, 244, 255, 0) 26%),
        radial-gradient(circle at 80% 0%, #eef6ff 0, rgba(238, 246, 255, 0) 20%),
        var(--bg);
    }

    .blog-page {
      max-width: 1100px;
      margin: 0 auto;
      padding: 140px 24px 80px;
    }

    .translation-note {
      background: rgba(14, 165, 233, 0.1);
      border: 1px solid rgba(14, 165, 233, 0.2);
      border-radius: 12px;
      padding: 12px 16px;
      margin-bottom: 48px;
      text-align: center;
      font-size: 14px;
      color: var(--ink);
    }

    .posts-grid {
      display: grid;
      gap: 24px;
      margin-bottom: 80px;
    }

    @media (min-width: 768px) {
      .posts-grid {
        grid-template-columns: repeat(2, 1fr);
      }
    }

    @media (min-width: 1024px) {
      .posts-grid {
        grid-template-columns: repeat(3, 1fr);
      }
    }

    .post-card {
      border: 1px solid var(--border);
      border-radius: 20px;
      padding: 24px;
      background: #ffffff;
      box-shadow: 0 18px 48px rgba(15, 23, 42, 0.05);
      transition: transform 150ms ease, box-shadow 150ms ease;
      text-decoration: none;
      display: flex;
      flex-direction: column;
      height: 100%;
    }

    .post-card:hover {
      transform: translateY(-4px);
      box-shadow: 0 24px 60px rgba(15, 23, 42, 0.12);
    }

    .post-tag {
      display: inline-flex;
      align-items: center;
      gap: 2px;
      border-radius: 9999px;
      background: rgba(14, 165, 233, 0.1);
      color: var(--accent);
      padding: 4px 12px;
      font-size: 12px;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.05em;
      margin-bottom: 12px;
      width: fit-content;
    }

    .post-date {
      font-size: 14px;
      color: var(--muted);
      margin-bottom: 12px;
    }

    .post-title {
      font-size: 22px;
      font-weight: 600;
      color: var(--ink);
      margin-bottom: 12px;
      line-height: 1.3;
    }

    .post-excerpt {
      font-size: 15px;
      line-height: 1.6;
      color: var(--muted);
      flex-grow: 1;
    }

    .empty-state {
      text-align: center;
      padding: 80px 20px;
      color: var(--muted);
    }

    .empty-state h2 {
      font-size: 28px;
      font-weight: 600;
      margin-bottom: 12px;
      color: var(--ink);
    }

    .empty-state p {
      font-size: 18px;
      line-height: 1.6;
    }

    .post-image {
      width: 100%;
      height: 150px;
      object-fit: cover;
      border-radius: 16px;
      margin-bottom: 16px;
      background: linear-gradient(135deg, #f0f4ff 0%, #eef6ff 100%);
    }

    /* Dark mode */
    @media (prefers-color-scheme: dark) {
      :root:not(.theme-dark) {
        color-scheme: dark;
        --bg: #0b1220;
        --border: #1f2937;
        --ink: #e5e7eb;
        --muted: #cbd5e1;
        --accent: #38bdf8;
      }

      body {
        background: radial-gradient(circle at 10% 20%, rgba(34, 211, 238, 0.08) 0, rgba(34, 211, 238, 0) 26%),
          radial-gradient(circle at 80% 0%, rgba(248, 113, 113, 0.12) 0, rgba(248, 113, 113, 0) 22%),
          #0b1220;
      }
    }

    .theme-dark {
      color-scheme: dark;
      --bg: #0b1220;
      --border: #1f2937;
      --ink: #e5e7eb;
      --muted: #cbd5e1;
      --accent: #38bdf8;
    }

    .theme-dark body {
      background: radial-gradient(circle at 10% 20%, rgba(34, 211, 238, 0.08) 0, rgba(34, 211, 238, 0) 26%),
        radial-gradient(circle at 80% 0%, rgba(248, 113, 113, 0.12) 0, rgba(248, 113, 113, 0) 22%),
        #0b1220;
    }

    .theme-dark .post-card,
    .theme-dark .blog-cta {
      background: #0f1628;
      border-color: #1f2937;
      box-shadow: 0 24px 60px rgba(0, 0, 0, 0.28);
    }

    .theme-dark .post-card:hover {
      box-shadow: 0 30px 75px rgba(0, 0, 0, 0.35);
    }

    .theme-dark .post-tag {
      background: rgba(56, 189, 248, 0.15);
      color: #38bdf8;
    }

    .theme-dark .post-image {
      background: linear-gradient(135deg, #1f2937 0%, #0f1628 100%);
    }
  </style>

  <div class="blog-page">
    {showFallbackNote && (
      <div class="translation-note">
        Translation coming soon. Showing English version.
      </div>
    )}

    {posts.length === 0 ? (
      <div class="empty-state">
        <h2>Coming soon</h2>
        <p>We're working on our first blog posts. Check back soon!</p>
      </div>
    ) : (
      <div class="posts-grid">
        {posts.map(post => (
          <a href={`/${lang}/blog/${post.slug}`} class="post-card">
            {post.image ? (
              <img
                class="post-image"
                src={post.image}
                alt={post.imageAlt || post.title}
                loading="lazy"
                decoding="async"
              />
            ) : (
              <div class="post-image"></div>
            )}
            {post.tag && <div class="post-tag">{post.tag}</div>}
            <h2 class="post-title">{post.title}</h2>
            <p class="post-excerpt">{post.excerpt}</p>
          </a>
        ))}
      </div>
    )}
  </div>
</BaseLayout>
