---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { readdirSync, readFileSync, existsSync } from 'fs';
import { join } from 'path';
import { marked } from 'marked';

export function getStaticPaths() {
  const blogDir = join(process.cwd(), 'content', 'blog', 'en');
  
  if (!existsSync(blogDir)) {
    return [];
  }
  
  const files = readdirSync(blogDir).filter(f => f.endsWith('.md'));
  
  return files.map(file => ({
    params: { slug: file.replace('.md', '') }
  }));
}

const { slug } = Astro.params;
const lang = 'en';

// Load blog post content
const contentPath = join(process.cwd(), 'content', 'blog', 'en', `${slug}.md`);
let content = '';
let title = slug;
let date = '';

if (existsSync(contentPath)) {
  const fileContent = readFileSync(contentPath, 'utf-8');
  
  // Extract frontmatter
  const frontmatterMatch = fileContent.match(/^---\n([\s\S]*?)\n---\n([\s\S]*)$/);
  if (frontmatterMatch) {
    const frontmatter = frontmatterMatch[1];
    const markdown = frontmatterMatch[2];
    
    const titleMatch = frontmatter.match(/title:\s*["'](.*)["']/);
    const dateMatch = frontmatter.match(/date:\s*["'](.*)["']/);
    
    if (titleMatch) title = titleMatch[1];
    if (dateMatch) date = dateMatch[1];
    
    content = marked.parse(markdown);
  } else {
    content = marked.parse(fileContent);
  }
}
---

<BaseLayout title={`${title} · Vokabulo Blog`} currentLang={lang} currentPath={`/blog/${slug}`}>
  <style>
    .page {
      max-width: 750px;
      margin: 0 auto;
      padding: 140px 24px 48px;
    }

    .back-link {
      display: inline-block;
      margin-bottom: 32px;
      color: var(--muted);
      text-decoration: none;
      font-size: 14px;
      transition: color 150ms ease;
    }

    .back-link:hover {
      color: var(--ink);
    }

    .post-header {
      margin-bottom: 48px;
    }

    .post-date {
      font-size: 14px;
      color: var(--muted);
      margin-bottom: 12px;
    }

    h1 {
      font-size: 48px;
      font-weight: 700;
      line-height: 1.2;
      color: var(--ink);
      margin: 0;
    }

    .post-content {
      font-size: 18px;
      line-height: 1.7;
      color: var(--muted);
    }

    .post-content h2 {
      font-size: 32px;
      font-weight: 600;
      color: var(--ink);
      margin: 48px 0 24px;
      line-height: 1.3;
    }

    .post-content h3 {
      font-size: 24px;
      font-weight: 600;
      color: var(--ink);
      margin: 40px 0 16px;
      line-height: 1.4;
    }

    .post-content p {
      margin: 0 0 24px;
    }

    .post-content ul,
    .post-content ol {
      margin: 0 0 24px;
      padding-left: 32px;
    }

    .post-content li {
      margin-bottom: 12px;
    }

    .post-content strong {
      color: var(--ink);
      font-weight: 600;
    }

    .post-content a {
      color: #0ea5e9;
      text-decoration: underline;
    }

    .post-content a:hover {
      color: #0284c7;
    }

    .post-content img {
      max-width: 100%;
      height: auto;
      border-radius: 12px;
      margin: 32px 0;
    }

    .post-content blockquote {
      border-left: 4px solid var(--border);
      padding-left: 24px;
      margin: 32px 0;
      font-style: italic;
      color: var(--muted);
    }

    .post-content code {
      background: rgba(15, 23, 42, 0.05);
      padding: 2px 6px;
      border-radius: 4px;
      font-size: 0.9em;
      font-family: 'SF Mono', 'Monaco', 'Inconsolata', 'Fira Code', monospace;
    }

    .post-content pre {
      background: rgba(15, 23, 42, 0.05);
      padding: 16px;
      border-radius: 8px;
      overflow-x: auto;
      margin: 24px 0;
    }

    .post-content pre code {
      background: none;
      padding: 0;
    }

    @media (prefers-color-scheme: dark) {
      :root:not(.theme-dark) {
        --bg: #0b1220;
        --border: #1f2937;
        --ink: #e5e7eb;
        --muted: #cbd5e1;
      }
    }

    .theme-dark {
      --bg: #0b1220;
      --border: #1f2937;
      --ink: #e5e7eb;
      --muted: #cbd5e1;
    }

    .theme-dark .post-content code {
      background: rgba(255, 255, 255, 0.05);
    }

    .theme-dark .post-content pre {
      background: rgba(255, 255, 255, 0.05);
    }

    .theme-dark .post-content a {
      color: #38bdf8;
    }

    .theme-dark .post-content a:hover {
      color: #7dd3fc;
    }
  </style>

  <div class="page">
    <a href="/en/blog" class="back-link">← Back to Blog</a>
    
    <div class="post-header">
      {date && <div class="post-date">{new Date(date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}</div>}
      <h1>{title}</h1>
    </div>

    <article class="post-content">
      <Fragment set:html={content} />
    </article>
  </div>
</BaseLayout>
