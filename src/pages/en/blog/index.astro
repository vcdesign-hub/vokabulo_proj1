import BaseLayout from '../../../layouts/BaseLayout.astro';
import { readdirSync, readFileSync, existsSync } from 'fs';
import { join } from 'path';

const lang = 'en';

// Load all blog posts
const blogDir = join(process.cwd(), 'content', 'blog', 'en');
let posts: Array<{slug: string, title: string, date: string, excerpt: string}> = [];

if (existsSync(blogDir)) {
  const files = readdirSync(blogDir).filter(f => f.endsWith('.md'));
  
  posts = files.map(file => {
    const slug = file.replace('.md', '');
    const content = readFileSync(join(blogDir, file), 'utf-8');
    
    // Extract frontmatter
    const frontmatterMatch = content.match(/^---\n([\s\S]*?)\n---\n([\s\S]*)$/);
    let title = slug;
    let date = '';
    let excerpt = '';
    
    if (frontmatterMatch) {
      const frontmatter = frontmatterMatch[1];
      const markdown = frontmatterMatch[2];
      
      const titleMatch = frontmatter.match(/title:\s*["'](.*)["']/);
      const dateMatch = frontmatter.match(/date:\s*["'](.*)["']/);
      const excerptMatch = frontmatter.match(/excerpt:\s*["'](.*)["']/);
      
      if (titleMatch) title = titleMatch[1];
      if (dateMatch) date = dateMatch[1];
      if (excerptMatch) excerpt = excerptMatch[1];
      
      // If no excerpt, use first paragraph
      if (!excerpt) {
        const firstPara = markdown.trim().split('\n\n')[0];
        excerpt = firstPara.substring(0, 200) + (firstPara.length > 200 ? '...' : '');
      }
    }
    
    return { slug, title, date, excerpt };
  }).sort((a, b) => new Date(b.date).getTime() - new Date(a.date).getTime());
}
---

<BaseLayout title="Blog Â· Vokabulo" currentLang={lang} currentPath="/blog">
  <style>
    .page {
      max-width: 900px;
      margin: 0 auto;
      padding: 140px 24px 48px;
    }

    h1 {
      font-size: 48px;
      font-weight: 700;
      margin-bottom: 12px;
      color: var(--ink);
    }

    .subtitle {
      font-size: 18px;
      color: var(--muted);
      margin-bottom: 48px;
    }

    .posts-grid {
      display: grid;
      gap: 32px;
    }

    .post-card {
      border: 1px solid var(--border);
      border-radius: 16px;
      padding: 24px;
      background: #ffffff;
      transition: transform 150ms ease, box-shadow 150ms ease;
      text-decoration: none;
      display: block;
    }

    .post-card:hover {
      transform: translateY(-2px);
      box-shadow: 0 12px 24px rgba(15, 23, 42, 0.1);
    }

    .post-date {
      font-size: 14px;
      color: var(--muted);
      margin-bottom: 8px;
    }

    .post-title {
      font-size: 24px;
      font-weight: 600;
      color: var(--ink);
      margin-bottom: 12px;
    }

    .post-excerpt {
      font-size: 16px;
      line-height: 1.6;
      color: var(--muted);
    }

    .empty-state {
      text-align: center;
      padding: 80px 20px;
      color: var(--muted);
    }

    .empty-state h2 {
      font-size: 24px;
      margin-bottom: 12px;
      color: var(--ink);
    }

    @media (prefers-color-scheme: dark) {
      :root:not(.theme-dark) {
        --bg: #0b1220;
        --border: #1f2937;
        --ink: #e5e7eb;
        --muted: #cbd5e1;
      }
    }

    .theme-dark {
      --bg: #0b1220;
      --border: #1f2937;
      --ink: #e5e7eb;
      --muted: #cbd5e1;
    }

    .theme-dark .post-card {
      background: #0f1628;
      border-color: #1f2937;
    }

    .theme-dark .post-card:hover {
      box-shadow: 0 12px 24px rgba(0, 0, 0, 0.3);
    }
  </style>

  <div class="page">
    <h1>Blog</h1>
    <p class="subtitle">Thoughts on language learning, vocabulary, and building Vokabulo</p>

    {posts.length === 0 ? (
      <div class="empty-state">
        <h2>Coming soon</h2>
        <p>We're working on our first blog posts. Check back soon!</p>
      </div>
    ) : (
      <div class="posts-grid">
        {posts.map(post => (
          <a href={`/en/blog/${post.slug}`} class="post-card">
            {post.date && <div class="post-date">{new Date(post.date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}</div>}
            <h2 class="post-title">{post.title}</h2>
            <p class="post-excerpt">{post.excerpt}</p>
          </a>
        ))}
      </div>
    )}
  </div>
</BaseLayout>
