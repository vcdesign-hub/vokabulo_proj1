---
import '../styles/tailwind.css';
import '../styles/styles.css';
import '../styles/markdown.css';
// Ensure useTranslations is imported here
import { SUPPORTED_LANGS, LANGUAGES, useTranslations } from '../utils/i18n'; 
import { buildCanonicalUrl, buildHreflangAlternates } from '../utils/seo';

interface Props {
  title: string;
  description?: string;
  currentLang?: string;
  currentPath?: string;
}


const { title, description, currentLang = 'en', currentPath = '' } = Astro.props;

// Initialize the 't' function here
const t = useTranslations(currentLang);

const languages = SUPPORTED_LANGS.map(code => ({
  code,
  name: LANGUAGES[code]
}));

// Analytics (Umami Cloud)
// Only enable in production to avoid polluting analytics with local/dev traffic.
const ENABLE_UMAMI = import.meta.env.PROD;
const UMAMI_SRC = 'https://cloud.umami.is/script.js';
const UMAMI_WEBSITE_ID = '9f7a934c-e422-4026-82fb-9ee8d01a5911';

// Build SEO URLs
const siteUrl = Astro.site?.toString().replace(/\/$/, '') || 'https://vokabulo.com';
const canonicalUrl = buildCanonicalUrl(siteUrl, Astro.url.pathname);
const hreflangAlternates = buildHreflangAlternates(siteUrl, Astro.url.pathname);
---

<!doctype html>
<html lang={currentLang} style="scroll-behavior: smooth;">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    {description && <meta name="description" content={description} />}

    {ENABLE_UMAMI && (
      <script defer src={UMAMI_SRC} data-website-id={UMAMI_WEBSITE_ID}></script>
    )}
    
    <link rel="canonical" href={canonicalUrl} />
    
    {hreflangAlternates.map(({ lang, url }) => (
      <link rel="alternate" hreflang={lang} href={url} />
    ))}
    
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet" />

    <style is:global>
      :root {
        /* This stack prioritizes Inter, then falls back to native SF Pro on Macs */
        --font-sans: 'Inter', -apple-system, BlinkMacSystemFont, "SF Pro Text", "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
      }
      body, html {
        font-family: var(--font-sans);
      }
    </style>

    <link rel="icon" href="/favicon.ico" sizes="any" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
  </head>
  <body class="antialiased">
    <script>
      import "../scripts/global.js";
    </script>
    <script is:inline>
      (() => {
        const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
        const stored = localStorage.getItem('theme');
        const initial = stored || (prefersDark ? 'dark' : 'light');
        if (initial === 'dark') document.documentElement.classList.add('theme-dark');
        window.__theme = initial;
      })();
    </script>
    
    <div class="fixed top-0 left-0 right-0 z-50">
      <div class="px-3 py-3 md:px-6">
        <header class="nav-shell mx-auto flex max-w-5xl items-center justify-between gap-4 px-4 py-3 md:px-6">
          <a href={`/${currentLang}`} class="flex items-center gap-3 text-lg font-semibold tracking-tight text-slate-900">
            <img src="/images/logo on white.svg" alt="Vokabulo logo" class="logo-light" />
            <img src="/images/logo on dark.svg" alt="Vokabulo logo" class="logo-dark" />
          </a>
          <nav class="hidden items-center gap-8 text-sm font-semibold text-slate-700 md:flex">
            <a class="..." href={`/${currentLang}`}>{t('nav.great')}</a>
            <a class="..." href={`/${currentLang}/support`}>{t('nav.works')}</a>
            <a class="..." href={`/${currentLang}/blog`}>{t('nav.blog')}</a>
          </nav>
        
          <div class="hidden md:flex items-center gap-3 text-sm font-semibold">
            <button
              id="theme-toggle"
              class="theme-toggle"
              type="button"
              aria-label="Toggle light/dark theme"
            >
              <svg id="icon-sun" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 4.5v-2m0 19v-2m7.5-7.5h2m-19 0h2M17.303 6.697l1.414-1.414M5.283 18.717l1.414-1.414m0-10.606L5.283 5.283m13.434 13.434-1.414-1.414M12 8.25A3.75 3.75 0 1 0 12 15.75 3.75 3.75 0 0 0 12 8.25Z" />
              </svg>
              <svg id="icon-moon" class="hidden" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M21 12.79A9 9 0 0 1 11.21 3 7.5 7.5 0 1 0 21 12.79Z" />
              </svg>
            </button>
          </div>
          <button
            class="ml-3 inline-flex h-10 w-10 items-center justify-center rounded-full border border-white/60 bg-white/70 text-slate-700 shadow-sm transition hover:-translate-y-0.5 hover:shadow-soft md:hidden"
            aria-label="Open menu"
            onclick="document.getElementById('mobile-menu').classList.toggle('hidden')"
          >
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 7h16M4 12h16M4 17h16" />
            </svg>
          </button>
        </header>
      </div>

      <div id="mobile-menu" class="mx-auto hidden max-w-5xl px-4 pb-4 md:hidden">
        <div class="flex flex-col gap-3 rounded-2xl border border-slate-200 bg-white p-4 shadow-soft">
          <a class="py-1 text-sm font-medium text-slate-800" href={`/${currentLang}`}>{t('nav.great')}</a>
          <a class="py-1 text-sm font-medium text-slate-800" href={`/${currentLang}/support`}>{t('nav.works')}</a>
          <a class="py-1 text-sm font-medium text-slate-800" href={`/${currentLang}/blog`}>{t('nav.blog')}</a>
          <button
            id="theme-toggle-mobile"
            class="theme-toggle-mobile flex items-center gap-2 py-1 text-sm font-medium text-slate-800"
            type="button"
            aria-label="Toggle light/dark theme"
          >
            <svg id="icon-sun-mobile" class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 4.5v-2m0 19v-2m7.5-7.5h2m-19 0h2M17.303 6.697l1.414-1.414M5.283 18.717l1.414-1.414m0-10.606L5.283 5.283m13.434 13.434-1.414-1.414M12 8.25A3.75 3.75 0 1 0 12 15.75 3.75 3.75 0 0 0 12 8.25Z" />
            </svg>
            <svg id="icon-moon-mobile" class="hidden h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M21 12.79A9 9 0 0 1 11.21 3 7.5 7.5 0 1 0 21 12.79Z" />
            </svg>
            <span id="theme-label-mobile">Dark mode</span>
          </button>
        </div>
      </div>
    </div>

    <slot />

    <footer class="relative w-full pt-32 pb-12 overflow-hidden transition-colors duration-500 dark:bg-[#003f7f]">

      <div class="relative z-20 w-full max-w-7xl mx-auto px-6 md:px-16 lg:px-24">
      
        <div class="flex flex-col items-center text-center mb-32">
          <div class="text-[10px] md:text-xs font-bold tracking-[0.3em] text-slate-500 dark:text-slate-400 uppercase mb-8">
            Vokabulo
          </div>
          
          <h2 class="footer-mega-text font-light tracking-tight leading-[1.0] mb-8 w-full max-w-none">
            <span class="font-bold tracking-tighter text-slate-900 dark:text-white">EVERYTHING GREAT</span>
            <br />
            <span class="font-serif italic text-3xl md:text-6xl text-[#FF6B35] mx-2 lowercase">{t('footer.starts')}</span>
            <span class="font-bold tracking-tighter text-slate-900 dark:text-white">THE RIGHT WORDS.</span>
          </h2>
        </div>
    
        <div class="flex flex-col md:flex-row justify-between items-end border-t border-slate-300/50 dark:border-white/10 pt-10 gap-8">
          <div class="flex flex-col gap-3">
             <p class="text-xs text-slate-500 dark:text-slate-400 uppercase tracking-widest leading-relaxed">
               © 2026 Tathros GmbH  <span class="mx-2">|</span> {t('footer.created')}
             </p>
          </div>
    
          <div class="flex flex-col items-end gap-8">
            <nav class="flex flex-wrap justify-end gap-8 md:gap-12">
               <a href="#" class="text-sm font-semibold text-slate-600 dark:text-slate-400 hover:text-[var(--accent)] transition-colors">{t('footer.legal')}</a>
              <a href="#" class="text-sm font-semibold text-slate-600 dark:text-slate-400 hover:text-[var(--accent)] transition-colors">{t('footer.privacy')}</a>
              <a href="#" class="text-sm font-semibold text-slate-600 dark:text-slate-400 hover:text-[var(--accent)] transition-colors">{t('footer.contact')}</a>
              
               <div id="footer-lang-wrapper" class="relative">
                <button 
                  id="footer-lang-btn"
                  class="flex items-center gap-2 text-sm font-semibold text-slate-900 dark:text-white hover:text-[var(--accent)] transition-colors"
                  aria-haspopup="true"
                  aria-expanded="false"
                >
                  {LANGUAGES[currentLang as keyof typeof LANGUAGES]}
                  <svg id="footer-lang-icon" class="w-4 h-4 text-slate-400 transition-transform duration-200" fill="none" stroke="currentColor" stroke-width="2.5" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7"></path>
                  </svg>
                </button>
              
                <div id="footer-lang-menu" class="absolute bottom-full right-0 mb-4 hidden min-w-[140px] bg-white dark:bg-slate-900 border border-slate-200 dark:border-white/10 rounded-xl shadow-2xl p-2 z-50">
                  {SUPPORTED_LANGS.map((code) => (
                    <a 
                      href={`/${code}${currentPath}`}
                      class={`block px-4 py-2 text-sm rounded-lg transition-colors ${
                        currentLang === code 
                          ? 'bg-slate-100 dark:bg-white/10 font-bold text-[var(--accent)]' 
                          : 'text-slate-600 dark:text-slate-400 hover:bg-slate-50 dark:hover:bg-white/5 hover:text-slate-900 dark:hover:text-white'
                      }`}
                    >
                      {LANGUAGES[code]}
                    </a>
                  ))}
                </div>
              </div>
            </nav>
          </div>
        </div>
      </div>
    </footer>
    
      


    <script is:inline>
      (() => {
        const root = document.documentElement;
        const btn = document.getElementById('theme-toggle');
        const iconSun = document.getElementById('icon-sun');
        const iconMoon = document.getElementById('icon-moon');
        
        // Mobile theme toggle elements
        const btnMobile = document.getElementById('theme-toggle-mobile');
        const iconSunMobile = document.getElementById('icon-sun-mobile');
        const iconMoonMobile = document.getElementById('icon-moon-mobile');
        const labelMobile = document.getElementById('theme-label-mobile');

        const setTheme = (mode, persist = true) => {
          if (mode === 'dark') {
            root.classList.add('theme-dark');
          } else {
            root.classList.remove('theme-dark');
          }
          if (persist) localStorage.setItem('theme', mode);
          const isDark = mode === 'dark';
          // Update desktop toggle
          iconSun?.classList.toggle('hidden', isDark);
          iconMoon?.classList.toggle('hidden', !isDark);
          // Update mobile toggle
          iconSunMobile?.classList.toggle('hidden', isDark);
          iconMoonMobile?.classList.toggle('hidden', !isDark);
          if (labelMobile) {
            labelMobile.textContent = isDark ? 'Light mode' : 'Dark mode';
          }
        };

        const stored = localStorage.getItem('theme');
        if (stored === 'dark' || stored === 'light') {
          setTheme(stored, false);
        }

        const toggleTheme = () => {
          const next = root.classList.contains('theme-dark') ? 'light' : 'dark';
          setTheme(next);
        };

        btn?.addEventListener('click', toggleTheme);
        btnMobile?.addEventListener('click', toggleTheme);
      })();
    </script>

    <script is:inline>
      (() => {
        // Smooth navbar reveal on scroll (desktop only)
        const navShell = document.querySelector('.nav-shell');
        if (!navShell) return;

        const isDesktop = () => window.matchMedia('(min-width: 768px)').matches;

        let ticking = false;
        
        const updateNavbarOpacity = () => {
          if (!isDesktop()) {
            // On mobile, always full opacity and full width
            navShell.style.setProperty('--nav-bg-opacity', '1');
            navShell.style.setProperty('--nav-width-scale', '1');
            return;
          }

          // Desktop: smooth ramp from 0 to 1 over 0-100px scroll
          const scrollY = window.scrollY;
          const maxScroll = 100;
          const opacity = Math.min(scrollY / maxScroll, 1);
          
          // Opacity: 0 → 1
          navShell.style.setProperty('--nav-bg-opacity', String(opacity));
          
          // Width scale: 1280px → 850px (33.6% narrower when scrolled)
          const widthScale = 1 - (0.3359375 * opacity);
          navShell.style.setProperty('--nav-width-scale', String(widthScale));
          
          ticking = false;
        };

        const onScroll = () => {
          if (!ticking) {
            requestAnimationFrame(updateNavbarOpacity);
            ticking = true;
          }
        };
        // Initial update
        updateNavbarOpacity();
        // Update on scroll with requestAnimationFrame for smooth 60fps
        window.addEventListener('scroll', onScroll, { passive: true });
        // Update on resize (in case user switches between mobile/desktop)
        let resizeTimeout;
        window.addEventListener('resize', () => {
          clearTimeout(resizeTimeout);
          resizeTimeout = setTimeout(updateNavbarOpacity, 100);
        });
      })();
    </script>

<script is:inline>
  // Language Switcher Toggle Logic
  (() => {
    const langBtn = document.getElementById('footer-lang-btn');
    const langMenu = document.getElementById('footer-lang-menu');
    const langIcon = document.getElementById('footer-lang-icon');

    if (langBtn && langMenu) {
      // Toggle menu on button click
      langBtn.addEventListener('click', (e) => {
        e.stopPropagation(); // Stop click from immediately closing it
        const isClosed = langMenu.classList.contains('hidden');
        
        if (isClosed) {
          // Open
          langMenu.classList.remove('hidden');
          if (langIcon) langIcon.style.transform = 'rotate(180deg)';
          langBtn.setAttribute('aria-expanded', 'true');
        } else {
          // Close
          langMenu.classList.add('hidden');
          if (langIcon) langIcon.style.transform = 'rotate(0deg)';
          langBtn.setAttribute('aria-expanded', 'false');
        }
      });

      // Close menu when clicking anywhere else on the page
      document.addEventListener('click', (e) => {
        if (!langBtn.contains(e.target) && !langMenu.contains(e.target)) {
          langMenu.classList.add('hidden');
          if (langIcon) langIcon.style.transform = 'rotate(0deg)';
          langBtn.setAttribute('aria-expanded', 'false');
        }
      });
    }
  })();
</script>



  </body>
</html>