---
import '../styles/tailwind.css';
import '../styles/styles.css';
import { SUPPORTED_LANGS, LANGUAGES } from '../utils/i18n';
import { buildCanonicalUrl, buildHreflangAlternates } from '../utils/seo';

interface Props {
  title: string;
  description?: string;
  currentLang?: string;
  currentPath?: string;
}

const { title, description, currentLang = 'en', currentPath = '' } = Astro.props;

const languages = SUPPORTED_LANGS.map(code => ({
  code,
  name: LANGUAGES[code]
}));

// Build SEO URLs
const siteUrl = Astro.site?.toString().replace(/\/$/, '') || 'https://vokabulo.com';
const canonicalUrl = buildCanonicalUrl(siteUrl, Astro.url.pathname);
const hreflangAlternates = buildHreflangAlternates(siteUrl, Astro.url.pathname);
---

<!doctype html>
<html lang={currentLang} style="scroll-behavior: smooth;">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    {description && <meta name="description" content={description} />}
    
    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalUrl} />
    
    <!-- Hreflang alternates -->
    {hreflangAlternates.map(({ lang, url }) => (
      <link rel="alternate" hreflang={lang} href={url} />
    ))}
    
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <link rel="icon" href="/favicon.ico" sizes="any" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
  </head>
  <body class="antialiased">
    <script is:inline>
      (() => {
        const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
        const stored = localStorage.getItem('theme');
        const initial = stored || (prefersDark ? 'dark' : 'light');
        if (initial === 'dark') document.documentElement.classList.add('theme-dark');
        window.__theme = initial;
      })();
    </script>
    
    <div class="fixed top-0 left-0 right-0 z-50">
      <div class="px-3 py-3 md:px-6">
        <header class="nav-shell mx-auto flex max-w-5xl items-center justify-between gap-4 px-4 py-3 md:px-6">
          <a href={`/${currentLang}`} class="flex items-center gap-3 text-lg font-semibold tracking-tight text-slate-900">
            <img src="/images/logo on white.svg" alt="Vokabulo logo" class="logo-light" />
            <img src="/images/logo on dark.svg" alt="Vokabulo logo" class="logo-dark" />
          </a>
          <nav class="hidden items-center gap-8 text-sm font-semibold text-slate-700 md:flex">
            <a class="transition hover:text-slate-900" href={`/${currentLang}#feature-blocks`}>FEATURES</a>
            <a class="transition hover:text-slate-900" href={`/${currentLang}#faq`}>FAQ</a>
            <a class="transition hover:text-slate-900" href={`/${currentLang}/support`}>HOW IT WORKS</a>
            <a class="transition hover:text-slate-900" href={`/${currentLang}/blog`}>BLOG</a>
          </nav>
          <div class="hidden md:flex items-center gap-3 text-sm font-semibold">
            <button
              id="theme-toggle"
              class="theme-toggle"
              type="button"
              aria-label="Toggle light/dark theme"
            >
              <svg id="icon-sun" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 4.5v-2m0 19v-2m7.5-7.5h2m-19 0h2M17.303 6.697l1.414-1.414M5.283 18.717l1.414-1.414m0-10.606L5.283 5.283m13.434 13.434-1.414-1.414M12 8.25A3.75 3.75 0 1 0 12 15.75 3.75 3.75 0 0 0 12 8.25Z" />
              </svg>
              <svg id="icon-moon" class="hidden" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M21 12.79A9 9 0 0 1 11.21 3 7.5 7.5 0 1 0 21 12.79Z" />
              </svg>
            </button>
          </div>
          <button
            class="ml-3 inline-flex h-10 w-10 items-center justify-center rounded-full border border-white/60 bg-white/70 text-slate-700 shadow-sm transition hover:-translate-y-0.5 hover:shadow-soft md:hidden"
            aria-label="Open menu"
            onclick="document.getElementById('mobile-menu').classList.toggle('hidden')"
          >
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 7h16M4 12h16M4 17h16" />
            </svg>
          </button>
        </header>
      </div>

      <div id="mobile-menu" class="mx-auto hidden max-w-5xl px-4 pb-4 md:hidden">
        <div class="flex flex-col gap-3 rounded-2xl border border-slate-200 bg-white p-4 shadow-soft">
          <a class="py-1 text-sm font-medium text-slate-800" href={`/${currentLang}#feature-blocks`}>FEATURES</a>
          <a class="py-1 text-sm font-medium text-slate-800" href={`/${currentLang}#faq`}>FAQ</a>
          <a class="py-1 text-sm font-medium text-slate-800" href={`/${currentLang}/support`}>HOW IT WORKS</a>
          <a class="py-1 text-sm font-medium text-slate-800" href={`/${currentLang}/blog`}>BLOG</a>
          <button
            id="theme-toggle-mobile"
            class="theme-toggle-mobile flex items-center gap-2 py-1 text-sm font-medium text-slate-800"
            type="button"
            aria-label="Toggle light/dark theme"
          >
            <svg id="icon-sun-mobile" class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 4.5v-2m0 19v-2m7.5-7.5h2m-19 0h2M17.303 6.697l1.414-1.414M5.283 18.717l1.414-1.414m0-10.606L5.283 5.283m13.434 13.434-1.414-1.414M12 8.25A3.75 3.75 0 1 0 12 15.75 3.75 3.75 0 0 0 12 8.25Z" />
            </svg>
            <svg id="icon-moon-mobile" class="hidden h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M21 12.79A9 9 0 0 1 11.21 3 7.5 7.5 0 1 0 21 12.79Z" />
            </svg>
            <span id="theme-label-mobile">Dark mode</span>
          </button>
        </div>
      </div>
    </div>

    <slot />

    <footer class="site-footer px-3 pb-6 pt-12 md:px-6 md:pb-8">
      <div class="footer-shell mx-auto max-w-5xl px-6 py-8 md:px-10 md:py-12">
        <!-- Top section: Logo + Tagline + Social | Navigation columns -->
        <div class="mb-8 flex flex-col gap-8 md:mb-12 md:flex-row md:justify-between">
          <!-- Left: Logo, Tagline, Social -->
          <div class="flex flex-col gap-4">
            <a href={`/${currentLang}`} class="flex items-center gap-3">
              <img src="/images/logo on white.svg" alt="Vokabulo logo" class="logo-light h-6" />
              <img src="/images/logo on dark.svg" alt="Vokabulo logo" class="logo-dark h-6" />
            </a>
            <p class="footer-tagline max-w-xs text-sm">
              Your favourite business management software. Built for early startup founders.
            </p>
            <div class="flex gap-3">
              <a 
                href="https://x.com/yourhandle" 
                target="_blank" 
                rel="noopener noreferrer"
                class="footer-social-btn inline-flex h-11 w-11 items-center justify-center rounded-full"
                aria-label="Follow us on Twitter"
              >
                <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z" />
                </svg>
              </a>
              <a 
                href="https://youtube.com/@yourchannel" 
                target="_blank" 
                rel="noopener noreferrer"
                class="footer-social-btn inline-flex h-11 w-11 items-center justify-center rounded-full"
                aria-label="Subscribe on YouTube"
              >
                <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z" />
                </svg>
              </a>
            </div>
          </div>

          <!-- Right: Navigation columns -->
          <div class="flex gap-12 md:gap-16">
            <!-- Pages column -->
            <div class="flex flex-col gap-3">
              <h3 class="footer-heading mb-1 text-xs font-semibold uppercase tracking-wider">Pages</h3>
              <a class="footer-link text-sm" href={`/${currentLang}`}>Home</a>
              <a class="footer-link text-sm" href={`/${currentLang}#feature-blocks`}>Features</a>
              <a class="footer-link text-sm" href={`/${currentLang}#faq`}>FAQ</a>
              <a class="footer-link text-sm" href={`/${currentLang}/support`}>How it works</a>
              <a class="footer-link text-sm" href={`/${currentLang}/blog`}>Blog</a>
            </div>

            <!-- Information column -->
            <div class="flex flex-col gap-3">
              <h3 class="footer-heading mb-1 text-xs font-semibold uppercase tracking-wider">Information</h3>
              <a class="footer-link text-sm" href={`/${currentLang}/legal-notice`}>Legal Notice</a>
              <a class="footer-link text-sm" href={`/${currentLang}/privacy`}>Privacy Policy</a>
              <a class="footer-link text-sm" href="mailto:hello@vokabulo.com">Contact</a>
            </div>
          </div>
        </div>

        <!-- Bottom section: Divider + Copyright + Language selector -->
        <div class="footer-divider mb-6 border-t"></div>
        <div class="flex flex-col items-start justify-between gap-4 text-sm md:flex-row md:items-center">
          <p class="footer-copyright">
            © 2026 Tathros GmbH. Created by <span class="font-semibold">Wolfgang Männel.</span>
          </p>
          <div class="relative ml-auto" style="position: relative; margin-bottom: 0;">
            <select
              id="footer-lang-select"
              class="footer-lang-select appearance-none bg-transparent border-none cursor-pointer pr-5 focus:outline-none"
              onchange="window.location.href = this.value"
              style="position: static;"
            >
              {languages.map(lang => (
                <option
                  value={`/${lang.code}${currentPath}`}
                  selected={lang.code === currentLang}
                >
                  {lang.name}
                </option>
              ))}
            </select>
            <svg xmlns="http://www.w3.org/2000/svg" class="absolute right-0 top-1/2 h-4 w-4 -translate-y-1/2 rotate-180 pointer-events-none" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </div>
        </div>
      </div>
    </footer>

    <script is:inline>
      (() => {
        const root = document.documentElement;
        const btn = document.getElementById('theme-toggle');
        const iconSun = document.getElementById('icon-sun');
        const iconMoon = document.getElementById('icon-moon');
        
        // Mobile theme toggle elements
        const btnMobile = document.getElementById('theme-toggle-mobile');
        const iconSunMobile = document.getElementById('icon-sun-mobile');
        const iconMoonMobile = document.getElementById('icon-moon-mobile');
        const labelMobile = document.getElementById('theme-label-mobile');

        const setTheme = (mode, persist = true) => {
          if (mode === 'dark') {
            root.classList.add('theme-dark');
          } else {
            root.classList.remove('theme-dark');
          }
          if (persist) localStorage.setItem('theme', mode);
          const isDark = mode === 'dark';
          
          // Update desktop toggle
          iconSun?.classList.toggle('hidden', isDark);
          iconMoon?.classList.toggle('hidden', !isDark);
          
          // Update mobile toggle
          iconSunMobile?.classList.toggle('hidden', isDark);
          iconMoonMobile?.classList.toggle('hidden', !isDark);
          if (labelMobile) {
            labelMobile.textContent = isDark ? 'Light mode' : 'Dark mode';
          }
        };

        const stored = localStorage.getItem('theme');
        if (stored === 'dark' || stored === 'light') {
          setTheme(stored, false);
        }

        const toggleTheme = () => {
          const next = root.classList.contains('theme-dark') ? 'light' : 'dark';
          setTheme(next);
        };

        btn?.addEventListener('click', toggleTheme);
        btnMobile?.addEventListener('click', toggleTheme);
      })();
    </script>

    <script is:inline>
      (() => {
        // Smooth navbar reveal on scroll (desktop only)
        const navShell = document.querySelector('.nav-shell');
        if (!navShell) return;

        const isDesktop = () => window.matchMedia('(min-width: 768px)').matches;

        let ticking = false;
        
        const updateNavbarOpacity = () => {
          if (!isDesktop()) {
            // On mobile, always full opacity and full width
            navShell.style.setProperty('--nav-bg-opacity', '1');
            navShell.style.setProperty('--nav-width-scale', '1');
            return;
          }

          // Desktop: smooth ramp from 0 to 1 over 0-100px scroll
          const scrollY = window.scrollY;
          const maxScroll = 100;
          const opacity = Math.min(scrollY / maxScroll, 1);
          
          // Opacity: 0 → 1
          navShell.style.setProperty('--nav-bg-opacity', String(opacity));
          
          // Width scale: 1280px → 850px (33.6% narrower when scrolled)
          const widthScale = 1 - (0.3359375 * opacity);
          navShell.style.setProperty('--nav-width-scale', String(widthScale));
          
          ticking = false;
        };

        const onScroll = () => {
          if (!ticking) {
            requestAnimationFrame(updateNavbarOpacity);
            ticking = true;
          }
        };

        // Initial update
        updateNavbarOpacity();

        // Update on scroll with requestAnimationFrame for smooth 60fps
        window.addEventListener('scroll', onScroll, { passive: true });

        // Update on resize (in case user switches between mobile/desktop)
        let resizeTimeout;
        window.addEventListener('resize', () => {
          clearTimeout(resizeTimeout);
          resizeTimeout = setTimeout(updateNavbarOpacity, 100);
        });
      })();
    </script>
  </body>
</html>
